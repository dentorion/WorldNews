<resources xmlns:tools="http://schemas.android.com/tools">

        <!-- Base application theme. -->
        <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
            <!-- Customize your theme here. -->
            <item name="colorPrimary">@color/colorPrimary</item>
            <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
            <item name="colorAccent">@color/colorAccent</item>

            <item name="android:windowBackground">@color/shark</item>
            <item name="android:textColor">@color/white</item>
        </style>

    <!-- ACTION BAR -->

    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
    </style>

    <style name="ThemeOverlay.App.Toolbar" parent="">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorAccent</item>
    </style>

    <!-- MENU ITEMS ACTION BAR -->

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorSurface">@color/colorAccent</item>
        <item name="checkboxStyle">@style/chh</item>
    </style>

    <style name="chh" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="buttonTint">@color/colorAccent</item>
    </style>

    <!-- SPLASH SCREEN Theme-->

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimaryDark">#3F3F3F</item>
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

</resources>