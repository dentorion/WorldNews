<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- DETAIL FRAGMENT -->

    <style name="text_font">
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="news_image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/image_height_detail</item>
        <item name="android:src">@drawable/ic_launcher_foreground</item>
    </style>

    <style name="red_bar">
        <item name="android:layout_width">@dimen/detailbar_width_detail</item>
        <item name="android:layout_height">@dimen/detailbar_height_detail</item>
        <item name="android:src">@drawable/detail_bar_source</item>
    </style>

    <style name="icon_author">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:src">@drawable/icon_article</item>
    </style>

    <style name="author" parent="text_font">
        <item name="android:textSize">@dimen/author_text_size_detail</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:maxLength">52</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="title_news" parent="text_font">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:letterSpacing">0.08</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="publish_day" parent="text_font">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="background">@drawable/rectangle_coral_background</item>
        <item name="android:paddingStart">@dimen/publish_time_padding_start_detail</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">11sp</item>
        <item name="android:background">@drawable/rectangle_coral_background</item>
    </style>

    <style name="publish_time" parent="publish_day">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="content" parent="text_font">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="btn_read_article_web">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:background">@drawable/rectangle_black_background</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.20</item>
        <item name="android:text">@string/detail_read_article_btn</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="btn_favourite">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:background">@drawable/rectangle_black_background</item>
        <item name="android:contentDescription">@string/description_favourite_btn</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingBottom">11dp</item>
        <item name="android:src">@drawable/favourite_icon_stroke_light</item>
    </style>

    <style name="btn_share">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:background">@drawable/rectangle_black_background</item>
        <item name="android:contentDescription">@string/description_share</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingBottom">11dp</item>
        <item name="android:src">@drawable/share_icon_light</item>
    </style>

    <style name="news_image_landscape">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>
</resources>